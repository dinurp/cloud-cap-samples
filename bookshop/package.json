{
    "name": "@capire/bookshop",
    "version": "1.0.0",
    "description": "A simple self-contained bookshop service.",
    "engines": {
        "node": "12.x"
    },
    "dependencies": {
        "@capire/common": "*",
        "@sap/audit-logging": "^5.0.0",
        "@sap/cds": "^5.0.4",
        "@sap/cds-mtx": "^2.0.1",
        "@sap/hana-client": "^2.6.61",
        "@sap/hdi-deploy": "^4.0.5",
        "@sap/instance-manager": "^3.0.0",
        "@sap/xsenv": "^3.1.0",
        "@sap/xssec": "^3.2.0",
        "express": "^4.17.1",
        "passport": "^0.4.1"
    },
    "scripts": {
        "genres": "cds serve test/genres.cds",
        "start": "cds run",
        "watch": "cds watch"
    },
    "cds": {
        "requires": {
            "db": {
                "kind": "hana",
                "model": [
                    "db",
                    "srv"
                ],
                "vcap": {
                    "label": "service-manager"
                }
            },
            "uaa": {
                "kind": "xsuaa"
            },
            "multitenancy": true
        },
        "hana": {
            "deploy-format": "hdbtable"
        }
    }
}
