{
    "name": "@sap/capire-products",
    "version": "1.0.0",
    "description": "products-service application for reuse",
    "license": "ISC",
    "repository": "<Add your repository here>",
    "scripts": {
        "build": "cds build/all --clean",
        "schema": "cds compile srv --to sql > srv/src/main/resources/schema.sql",
        "deploy": "cds deploy"
    },
    "dependencies": {
        "@sap/cds": "^3.0.0"
    },
    "cds": {
        "build": {
            "target": "."
        },
        "requires": {
            "db": {
                "kind": "sqlite",
                "model": [
                    "db",
                    "srv"
                ],
                "credentials": {
                    "database": "sqlite.db"
                }
            }
        },
        "odata": {
            "version": "v4"
        }
    },
    "devDependencies": {
        "sqlite3": "^4.1.1"
    }
}
